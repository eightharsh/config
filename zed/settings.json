// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "model_parameters": []
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "restore_on_startup": "last_session",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": "Everforest Dark Hard",
  "buffer_font_family": "BlexMono Nerd Font Mono",
  "buffer_font_size": 14,
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 14,
  //"icon_theme":"Catppuccin Macchiato",
  // "base_keymap": "SublimeText",
  "vim_mode": true,
  "vim": {"use_system_clipboard": "always" },
  "buffer_line_height": { "custom": 1.45 },
  "buffer_font_features": { "calt": false },
  "buffer_font_weight": 450,
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "project_panel": { "entry_spacing": "standard" ,"git_status": true},
  "tabs": { "file_icons": true, "git_status": true},
  "git": { "inline_blame": { "enabled": false },"git_gutter": "tracked_files" },
  "current_line_highlight": "gutter",
  "format_on_save": "off",
  "tab_size": 4,
  "hard_tabs": true,
  "terminal": {"dock": "bottom", "default_height": 300}
}
